<Window x:Class="wpf_E_ressource_dictionnaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_E_ressource_dictionnaire"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
        <Rectangle Margin="15" Width="120" Height="120" StrokeThickness="2"
                    Fill="{StaticResource GreenBrush}"/>
        <Rectangle Margin="15" Width="120" Height="120" StrokeThickness="2"
                    Fill="{DynamicResource RedBrush}"/>

        <Button x:Name="ChangeColor" Click="ChangeColor_Click"
                Content="Changer la couleur" Height="60" Width="150"/>
    </StackPanel>
</Window>
